<%= link_to "new entry", new_admin_entry_path, :class => :add %>
<br /><br />
<table width="100%" cellspacing="0" cellpadding="0" border="0">
  <caption>Entries</caption>
  <thead>
    <tr>
      <th>Title</th>
      <th>Permalink</th>
      <th>Published At</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @entries.each do |entry| %>
      <tr <%= cycle("", "class=\"row2\"") %>>
        <td><%= entry.title %></td>
        <td><%= entry.permalink %></td>
        <td><%= entry.publish_at %></td>
        <td>
          <% unless entry.published? %><a href="#" class="publish">publish</a><% end %>
          <%= link_to "edit", edit_admin_entry_path(entry), :class => :edit %>
          <%= link_to "delete", admin_entry_path(entry), :method => :delete, :class => :delete %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<br />
<%= link_to "new entry", new_admin_entry_path, :class => :add %>