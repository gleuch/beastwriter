<%= link_to "new post", new_admin_post_path, :class => :add %>
<br /><br />
<table width="100%" cellspacing="0" cellpadding="0" border="0">
  <caption>Posts</caption>
  <thead>
    <tr>
      <th>Title</th>
      <th>Permalink</th>
      <th>Published At</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr <%= cycle("", "class=\"row2\"") %>>
        <td><%= post.title %></td>
        <td><%= post.permalink %></td>
        <td><%= post.publish_at %></td>
        <td>
          <% unless post.published? %><a href="#" class="publish">publish</a><% end %>
          <%= link_to "edit", edit_admin_post_path(post), :class => :edit %>
          <%= link_to "delete", admin_post_path(post), :method => :delete, :class => :delete %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<br />
<%= link_to "new post", new_admin_post_path, :class => :add %>