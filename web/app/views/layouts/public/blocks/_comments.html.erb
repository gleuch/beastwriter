<div class="sidebarbox">
  <h2>Comments</h2>
  <p><a href="#" onclick="Effect.BlindDown('comment_form'); return false;">Post a comment of your own...</a></p>
  <div id="comment_form" style="display: none">
    <br />
    <% remote_form_for [@post, Comment.new] do |f| %>
      <p>
        <%= f.label :author, "Nickname" %><br />
        <%= f.text_field :author %>
      </p>
      <p>
        <%= f.label :author_url, "Website" %><br />
        <%= f.text_field :author_url %>
      </p>
      <p>
        <%= f.label :author_email, "E-mail Address (private)" %><br />
        <%= f.text_field :author_email %>
      </p>
      <p>
        <%= f.label :content, "New Comment" %><br />
        <%= f.text_area :content, :rows => 5 %>
      </p>
      <p><%= f.submit "Add Comment" %></p>
    <% end %>
  </div>
  <br />
  <div id="comments">
    <%= render :partial => @post.comments.active.order %>
  </div>
</div>